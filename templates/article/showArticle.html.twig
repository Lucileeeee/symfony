{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}

    <div class="w-full bg-white border border-gray-200 shadow-2xs rounded-xl p-4 md:p-5 ">
      <h1 id="{{ article.id }}"> {{ article.title  }} </h1>
        <p>{{ article.content }}</p>
        <p> {{ article.author.firstname }}  {{ article.author.lastname }} </p>
      {% for cat in article.categories %}
        {{ cat.name }}
        {% endfor %}
      <p> {{ article.createAt  | date("d/m/y") }}  </p>
</div>
{% endblock %}
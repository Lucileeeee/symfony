{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<div class="grid gap-2 p-2 xl:grid-cols-3 md:grid-cols-2 sm:grid-cols-1">
    {% for article in articles %}
    <div class="w-full bg-white border border-gray-200 shadow-2xs rounded-xl p-4 md:p-5 ">
      <h1>  {{ article.id }} {{ article.title  }} </h1>
        <p>{{ article.content }}</p>
        <p> {{ account.firstname }} {{ account.lastname }}</p>
      </div>
    {% endfor %}
</div>
{% endblock %}
